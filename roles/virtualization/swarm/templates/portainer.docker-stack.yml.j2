---
version: '3.8'

services:
  agent:
    image: portainer/agent
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /var/lib/docker/volumes:/var/lib/docker/volumes
    networks:
      - agent_network
    deploy:
      mode: global
      placement:
        constraints: [node.platform.os == linux]

  portainer:
    image: portainer/portainer-ce
    command: -H tcp://tasks.agent:9001 --tlsskipverify --admin-password-file /run/secrets/portainer_admin_password --logo https://gitlab.com/megabyte-labs/assets/-/raw/master/logo/megabytelabs-color-logo.png --no-analytics true --templates URL_TO_TEMPLATES_HERE
    ports:
      - "{{ports.portainer}}:9000"
      - "{{ports.portainer_edge}}:8000"
    volumes:
      - type: bind
        source: /mnt/shared/portainer
        target: /data
    networks:
      - agent_network
    secrets:
      - portainer_admin_password
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints: [node.role == manager]

networks:
  agent_network:
    driver: overlay
    attachable: true
